---
interface Props {
	max: number
}

const { max } = Astro.props;

const OPERACIONS = [
	{
		nome: "suma",
		simbolo: "+",
		op: "+"
	},
	{
		nome: "resta",
		simbolo: "-",
		op: "-"
	},
	{
		nome: "multiplicacion",
		simbolo: "x",
		op: "*"
	},
	{
		nome: "division",
		simbolo: "รท",
		op: "/"
	}
]

const op = Math.floor(Math.random()*OPERACIONS.length);
let num1 = Math.floor(Math.random()*max+1);
let num2 = Math.floor(Math.random()*max+1);
if (op === 1 && num1<num2){
	const temp = num1;
	num1 = num2;
	num2 = temp;
}
if (op === 3) {
	num1 = num1*num2;
}
---

<section class="operacion text-9xl">
<span class="numero">
	{num1}
</span>
<span class="operador">
	{OPERACIONS[op].simbolo}
</span>
<span class="numero">
	{num2}
</span>
</section>
<span class="resultado">
	{eval(num1+OPERACIONS[op].op+num2)}
</span>


<style>
	.operacion {
		font-weight: bold;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.8rem;
		height: 100vh;
	}
	.numero {		
		color: white;
	}
	.operador {
		color: yellow
	}
	.resultado {
		color: gray;
	}
</style>
